
if (trigger.isPlayer()) {
    if (trigger.getCP() == 39) {
	if (trigger.getExp() < 100) {
	    trigger.addExp(100);
	    trigger.chat("You have 100 experience points to spend.  These can be spent on skills and spells.");
	    trigger.chat("Visit the tutorial trainer to spend it.");
	} else {
	    trigger.chat("Visit the tutorial trainer and buy some Strength.");
	}
    }
}
