    removecondition trigger maze2
    addcondition trigger maze3
    set trigger locxy 125 189
    endscript
end
if hascondition trigger maze1
    removecondition trigger maze1
    addcondition trigger maze2
    set trigger locxy 125 189
    endscript
end
addcondition trigger maze1
set trigger locxy 125 189
endscript
